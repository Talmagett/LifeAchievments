@page
@model LifeAchievments.Pages.CreateEditCategoryModel
@{
}

<div class="container">
	<form method="post">
		<div class="mx-5 rounded-5 d-flex justify-content-center row m-2">
			<input class="w-50" type="text" asp-for="NewCategoryName" value="@Model.NewCategoryName" style="height: 50px;" />
			<button class="btn btn-danger rounded" type="submit" style="width: 50px; height: 50px">
				@if (@CreateEditCategoryModel.ChangingCategoryId == -1)
				{
					<h5>+</h5>
				}
				else
				{
					<h5>/</h5>
					<button class="btn btn-danger rounded" type="submit" style="width: 150px; height: 50px" asp-page-handler="Delete">Delete</button>
				}
			</button>
		</div>
	</form>
</div>