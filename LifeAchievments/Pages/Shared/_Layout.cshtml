<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - LifeAchievments</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/LifeAchievments.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Achievments">Achievments</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if (AchievmentsModel.CanEdit)
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/CreateEditCategory">Categories</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/IconManager">Icons</a>
							</li>
						}
					</ul>
					<div class="nav-item">
						@if (!AchievmentsModel.CanEdit)
						{
							<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#login-modal">Login</button>
						}
						else
						{
							<button class="btn btn-primary" onclick="Logout()">Logout</button>
						}
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - LifeAchievments - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>


	<div class="modal fade" id="login-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title text-black">Login</h4>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body row m-1">
					<input type="password" id="passwordToLogin" placeholder="Enter Password" />
				</div>
				<div class="modal-footer">
					<button class="btn btn-primary" onsubmit="tryLogin()" form="password-form">Login</button>
				</div>
			</div>
		</div>
	</div>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script type="text/javascript" defer>
	$('#login-modal').on('shown.bs.modal', function() {
		$('#passwordToLogin').focus();
	})
	var input = document.getElementById("passwordToLogin");
	input.addEventListener("keydown", function(e) {
		if (e.key === "Enter") {
			tryLogin();
		}
	});
	function Logout() {
		$.ajax({
			url: '/Achievments?handler=TryLogin',
			type: 'get',
			data: {
				"password": ""
			},
			beforeSend: function(xhr) {
				xhr.setRequestHeader("XSRF-TOKEN",
					$('input:hidden[name="__RequestVerificationToken"]').val());
			},
			success: function(response) {
			}
		}).done(function(msg) {
			window.location.reload();
			return false;
		}).fail(function(jqXHR, status) {
		});
	}
	function tryLogin() {
		var password = document.querySelector('#passwordToLogin').value;
		console.log(password);
		$.ajax({
			url: '/Achievments?handler=TryLogin',
			type: 'get',
			data: {
				"password": password
			},
			beforeSend: function(xhr) {
				xhr.setRequestHeader("XSRF-TOKEN",
					$('input:hidden[name="__RequestVerificationToken"]').val());
			},
			success: function(response) {
			}
		}).done(function(msg) {
			if (msg == "Successful") {
				window.location.reload();
				return false;
			}
			else {
				alert("You are not able to edit!");

				window.location.reload();
				return false;
			}
		}).fail(function(jqXHR, status) {
		});
	}
</script>